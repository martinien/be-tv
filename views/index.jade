extends layout

block content
  #weather(style="display:none")

  #container
    embed#vlc(type='application/x-vlc-plugin', pluginspage='http://www.videolan.org', text='Loading...', autoplay='yes', loop='no', target='http://127.0.0.1:8866/live?channel=51', windowless='true', z-index='-1', controls='false', branding='false', width='100%', height='100%')
    object(classid='clsid:9BE31822-FDAD-461B-AD51-BE1D1C159921', codebase='http://download.videolan.org/pub/videolan/vlc/last/win32/axvlc.cab', style='display:none;')

  #phone(style="display:none")
    #incoming-call
      h1(style="color:white;font-family: sans-serif;") APPEL ENTRANT...
      button#answer.button-success
        | Répondre
      button#refuse-call.button-error
        | Refuser
    video(id='their-video', autoplay)
    video(id='my-video', muted='true', autoplay)

  #notification(style="display:none")
    img#entrance
    button#accept.button-success.button-selected
      | Ouvrir
    button#refuse.button-error
      | Fermer
    #face()


  #urbiNotif(style="display:none")






  #alarm(style="display:none")
    h1 Fumée détectée
    img(src='../../images/issue-de-secours.png' height='350px' width='350px')
    p
      | Un détecteur de fumée a été activé.
      | Veuillez vous diriger vers l'issue de secours la plus proche.
    button.ok
      |OK

  #menu(style="display:none")
    h1(style='text-align: center;margin: 2%;') Choissisez votre menu
    #menu1
      h1(style='text-decoration:underline') Menu n°1
      h2 Champignons en salade
      img(src='images/menu-divider.png', width="80%")
      h2 Brandale de morue
      img(src='images/menu-divider.png', width="80%")
      h2 Tiramisu
    #menu2
      h1(style='text-decoration:underline') Menu n°2
      h2 Brocolis en vinaigrette
      img(src='images/menu-divider.png', width="80%")
      h2 Filet de colin meunière et épinards à la crème
      img(src='images/menu-divider.png', width="80%")
      h2 Bavarois

  #channel(style="display:none")
    h1 --
